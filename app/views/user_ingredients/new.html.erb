<h2>Ajoutez vos ingrédients !</h2>

<%= simple_form_for [@user_ingredient] do |f| %>
<%= f.association :ingredient, label: "Ingrédient" %>
<%= f.input :quantity, label: "Quantité" %>
<%= f.input :purchase_date, label: "Date d'achat", as: :string, required: false, input_html: {class: "datepicker"} %>
<%= f.input :expiration_date, label: "Date d'expiration", as: :string, required: false, input_html: {class: "datepicker"} %>
<%= f.button :submit, "Ajouter l'ingrédient !", class: "btn btn-primary"%>
<% end %>
